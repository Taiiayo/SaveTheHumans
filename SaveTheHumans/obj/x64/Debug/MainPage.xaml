<Page
    x:Class="SaveTheHumans.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SaveTheHumans"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ControlTemplate x:Key="EnemyTemplate" TargetType="ContentControl">
            <Grid>
                <Ellipse Height="100" Width="75" Fill="#FF484F4A" Stroke="Black"/>
                <Ellipse Height="35" Width="25" Fill="Red" Stroke="Black" Margin="40,20,70,0" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <CompositeTransform SkewX="10"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse Height="35" Width="25" Fill="Red" Stroke="Black" Margin="70,20,40,0" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <CompositeTransform SkewX="-10"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>
        </ControlTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>
        <Canvas x:ConnectionId='1' x:Name="playArea" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="-0.75,0" Grid.RowSpan="1" Grid.Row="1"                                                                            >
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB78ADC"/>
                    <GradientStop Color="#FF378779" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <TextBlock x:ConnectionId='7' x:Name="gameOverText" Text="Game Over" TextWrapping="Wrap" FontFamily="Arial Black" 
                       FontSize="72" FontWeight="Bold" FontStyle="Italic" Height="96" Width="389" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="542" Canvas.Top="295" Foreground="White"/>
            <Rectangle x:ConnectionId='8' x:Name="target" Height="50" Canvas.Left="790" Canvas.Top="525" Width="50" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"                                       >
                <Rectangle.RenderTransform>
                    <CompositeTransform Rotation="45"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2FBF18"/>
                        <GradientStop Color="#FF08ECEC" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel x:ConnectionId='9' x:Name="human" Orientation="Vertical"                                       Canvas.Left="707" Canvas.Top="545">
                <Ellipse Height="10" Fill="White" Width="10"/>
                <Rectangle Height="25" Width="10" Fill="White" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Canvas>
        <StackPanel Grid.ColumnSpan="2" Grid.Column="1" Orientation="Vertical" Grid.RowSpan="1" Grid.Row="2" Width="160" Height="160" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" 
                Text="Avoid These" TextWrapping="Wrap" VerticalAlignment="Center" Style="{StaticResource SubheaderTextBlockStyle}" FontSize="22"/>
            <ContentControl Template="{StaticResource EnemyTemplate}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse/>
            </ContentControl>
        </StackPanel>

        <!-- Back button and page title -->
        <Grid x:ConnectionId='2' x:Name="grid" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='5' x:Name="pageTitle" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="198,35,-610,-97" Grid.RowSpan="3" Text="Save the Humans" TextWrapping="Wrap" VerticalAlignment="Top" Height="62" Width="412" FontFamily="Cooper Black" FontSize="48" FontStyle="Italic"/>
            <Button x:ConnectionId='6' Content="" HorizontalAlignment="Left" Margin="45,45,-95,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="50" Width="50"                     >
                <Button.Background>
                    <ImageBrush ImageSource="Resources/help.png"/>
                </Button.Background>
            </Button>
        </Grid>

        <Button x:ConnectionId='3' x:Name="startButton" Content="Start!" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.692,-0.719" 
                FontFamily="Cooper Black" BorderThickness="2,2,2,2" Grid.Row="2" Grid.Column="0" Width="71" Height="38"                          />
        <ProgressBar x:ConnectionId='4' x:Name="progressBar" Grid.ColumnSpan="1" Grid.RowSpan="1" RenderTransformOrigin="0.167,1.214" Height="20" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Page>

